<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="ROBOT ARM" colour="#154c79" icon="cogs">
    <block type="arm_init"/>

    <block type="arm_origin"/>

    <block type="arm_moveBase">
      <value name="angle">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
    </block>

    <block type="arm_moveRight">
      <value name="angle">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
    </block>

    <block type="arm_moveLeft">
      <value name="angle">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
    </block>

    <block type="arm_moveKinematic">
      <value name="theta">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
      <value name="radius">
        <shadow type="math_number">
          <field name="NUM">80</field>
        </shadow>
      </value>
      <value name="height">
        <shadow type="math_number">
          <field name="NUM">80</field>
        </shadow>
      </value>
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
    </block>

    <block type="arm_moveGrip">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">100</field>
        </shadow>
      </value>
    </block>

  </category>
</xml>
